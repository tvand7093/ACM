h3.col-lg-12 Add New Officer
ul#addUserErrors.hidden(style='list-style-type: none')
form
	div.row
		.col-lg-4
			label Name
			input.form-control(type='text', name='username')
		.col-lg-4
			label Email
			input.form-control(type='text', name='email')
		.col-lg-4
			label Position
			select.position.form-control
				option(selected=selected, value) - Select a position -
				option(value='President') President
				option(value='Vice President') Vice President
				option(value='Treasurer') Treasurer
				option(value='Secretary') Secretary
				option(value='Secretary (Outreach)') Secretary (Outreach)
	.row
		.col-lg-12
			p &nbsp;
	.row
		.col-lg-6
			label Bio
			textarea.form-control(name='bio', rows='6')
		.col-lg-2
			label &nbsp;
			a.btn.btn-success.add-user(href='#', style='width:100%') Save
		.col-lg-2
			label &nbsp;
			a.btn.btn-primary.clear-input(href='#', style='width:100%') Clear
