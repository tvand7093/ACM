    block title
   
  body
    div.container
      div.navbar-header
        h3.text-muted ACM at Washington State University Vancouver
      div.navbar-collapse.collapse
        if !isLoggedIn
          form.navbar-form.navbar-right(name="login", action="/login", method="post")
            div.form-group
              input.form-control(type="text", placeholder='Email', name="email")
            div.form-group
              input.form-control(type="password", placeholder='Password', name="password")
            button.btn.btn-success(type='submit') Sign In
        else
          form.navbar-form.navbar-right(action='/logout', method='post')
            button.btn.btn-success.navbar-right(type='submit') Sign Out
          
        
        
    div.container
        nav
          ul.nav.nav-justified
            li
              a(href='/') Home
            li
              a(href='#') Members
            li
              a(href='/officers') Officers
            li
              a(href='#') Events
            li
              a(href='#') Why we are awesome
            if isAdmin
              li
                a(href='/documentation') API Docs
              li
                a(href='#') Portal
              
