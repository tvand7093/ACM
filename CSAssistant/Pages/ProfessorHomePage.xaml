<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="CSAssistant.Pages.ProfessorHomePage"
	xmlns:cells="clr-namespace:CSAssistant.Cells;assembly=CSAssistant"
	Title="{Binding ProfessorName}" Icon="linux30.png" IsBusy="{Binding ShowLoading}">
	<ContentPage.Content>
		<StackLayout>
			<ActivityIndicator IsRunning="{Binding ShowLoading}" IsVisible="{Binding ShowLoading}"
				HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Scale="2"/>

			<StackLayout IsVisible="{Binding ShowContent}" Spacing="10" BackgroundColor="{Binding ImageBackgoundColor}">
				<Image Source="{Binding Image}" VerticalOptions="Fill" 
						BackgroundColor="{Binding ImageBackgoundColor}" HorizontalOptions="FillAndExpand" />
				<Label Text="{Binding Title}" TextColor="{Binding SemesterTextColor}"
						FontSize="15" HorizontalOptions="FillAndExpand"
						XAlign="Center" BackgroundColor="{Binding ImageBackgoundColor}"/>
				<ListView ItemsSource="{Binding Courses}"
					SelectedItem="{Binding Selection, Mode=TwoWay}">
					<ListView.ItemTemplate>
						<DataTemplate>
							<cells:RightArrowCell Text="{Binding Name}" />
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
