<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="ACM.Views.Pages.EventsPage"
	xmlns:vms="clr-namespace:ACM.ViewModels;assembly=ACM"
	xmlns:pages="clr-namespace:ACM.Views.Pages;assembly=ACM"
	xmlns:theme="clr-namespace:ACM.Views.Themes;assembly=ACM"
	xmlns:cells="clr-namespace:ACM.Views.CustomCells;assembly=ACM"
	Title="Events" Icon="Favorites.png">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="ActivityIndicator">
		        <Setter Property="Color" Value="White" />
	        </Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	<ContentPage.Content>
		<pages:CustomListView ItemsSource="{Binding Items}" SeparatorColor="White"
			SelectedItem="{Binding SelectedItem, Mode=TwoWay}" IsPullToRefreshEnabled="true"
			RefreshCommand="{Binding PullToRefreshCommand}" IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}"
			BackgroundColor="{Binding Source={x:Static theme:ColorThemes.CougarGrey}}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<cells:RightTextCell Text="{Binding Topic}"
						TextColor="{Binding Source={x:Static theme:ColorThemes.CougarWhite}}"
						DetailColor="{Binding Source={x:Static theme:ColorThemes.CougarWhite}}"
					 	Detail="{Binding InfoString}" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</pages:CustomListView>
	</ContentPage.Content>
</ContentPage>
