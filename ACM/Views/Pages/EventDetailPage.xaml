<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:vms="clr-namespace:ACM.ViewModels;assembly=ACM"
	xmlns:theme="clr-namespace:ACM.Views.Themes;assembly=ACM"
	x:Class="ACM.Views.Pages.EventDetailPage" Title="Event Details">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Label">
		        <Setter Property="TextColor" Value="White" />
	        </Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	<ContentPage.Content>
		<ScrollView Padding="5" BackgroundColor="{Binding Source={x:Static theme:ColorThemes.CougarGrey}}">
			<StackLayout Spacing="20" HorizontalOptions="FillAndExpand">
				<Label Text="{Binding DataSource.Topic}" 
					HorizontalOptions="CenterAndExpand" VerticalOptions="Fill"
				 	FontSize="20"/>
				<Frame VerticalOptions="Fill" HorizontalOptions="Center" Padding="5" BindingContext="{Binding DataSource}"
					BackgroundColor="{Binding Source={x:Static theme:ColorThemes.CougarBlue}}">
					<StackLayout BindingContext="{Binding Speaker}">
				 		<Image Source="{Binding Picture}"
				 			HeightRequest="100" WidthRequest="100"
				 			HorizontalOptions="CenterAndExpand" />
					 	<Label Text="{Binding Name, StringFormat='Presented By: {0}'}"
					 	 	HorizontalOptions="CenterAndExpand"/>
					 	<Label Text="{Binding JobTitle, StringFormat='Title: {0}'}"
					 		HorizontalOptions="CenterAndExpand" />
					 	<Label Text="{Binding Twitter, StringFormat='Twitter: @{0}'}"
					 		HorizontalOptions="CenterAndExpand"/>
					 </StackLayout>
				 </Frame>

				<StackLayout Spacing="5" HorizontalOptions="FillAndExpand">
					<StackLayout Orientation="Horizontal">
						<Label Text="{Binding DataSource.StartTime, StringFormat='{}On: {0:d}'}" 
							HorizontalOptions="CenterAndExpand"  VerticalOptions="Fill"
						 	FontSize="15"/>
						<Label Text="{Binding DataSource.Location, StringFormat='{}Location: {0:d}'}" 
							HorizontalOptions="CenterAndExpand"  VerticalOptions="Fill"
						 	FontSize="15"/>
				 	</StackLayout>
					 <StackLayout Orientation="Horizontal">
					 	<Label Text="{Binding DataSource.StartTime, StringFormat='{}Begins: {0:t}'}"
					 		HorizontalOptions="CenterAndExpand" FontSize="15"/>
					 	<Label Text="{Binding DataSource.EndTime, StringFormat='{}Ends: {0:t}'}" 
					 		HorizontalOptions="CenterAndExpand" FontSize="15" />
					 </StackLayout>
				</StackLayout>

				 <Label Text="{Binding DataSource.Description}"
					HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand"/>
				<Button BorderWidth="1"
					Text="Add Event To Calendar" HorizontalOptions="FillAndExpand"
					Command="{Binding AddToCalendarCommand}">
					<Button.BorderColor>
						<OnPlatform x:TypeArguments="Color"
							iOS="{x:Static theme:ColorThemes.CougarBlue}"></OnPlatform>
					</Button.BorderColor>
					<Button.TextColor>
						<OnPlatform x:TypeArguments="Color"
							iOS="{x:Static theme:ColorThemes.CougarWhite}"></OnPlatform>
					</Button.TextColor>
					<Button.BackgroundColor>
						<OnPlatform x:TypeArguments="Color"
							iOS="{x:Static theme:ColorThemes.CougarOrange}"></OnPlatform>
					</Button.BackgroundColor>
				</Button>
			</StackLayout>
		</ScrollView>

	</ContentPage.Content>
</ContentPage>
